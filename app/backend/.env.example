# Backend Environment Variables

# Database
DATABASE_URL="postgresql://wiki:wiki@localhost:5432/wiki"

# JWT Secrets (Generate new ones for production!)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# SMTP Configuration (optional)
SMTP_HOST="localhost"
SMTP_PORT=587
SMTP_USER="wiki@example.com"
SMTP_PASS="password"
SMTP_FROM="Wiki System <wiki@example.com>"
SMTP_SECURE=false

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_TTL=60      # seconds
RATE_LIMIT_LIMIT=100   # requests per TTL

# Security
CORS_ORIGIN="http://localhost:5173"
COOKIE_SECRET="your-cookie-secret-change-this"

# Application
PORT=3001
NODE_ENV=development

# Search
SEARCH_ENGINE="postgresql"  # postgresql or meilisearch
MEILISEARCH_URL="http://localhost:7700"
MEILISEARCH_KEY=""

# Backup
BACKUP_DIR="./backups"
BACKUP_RETENTION_DAYS=30

# PDF Export
PDF_TIMEOUT=30000
PDF_POOL_SIZE=2