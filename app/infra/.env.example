# Production Environment Variables
# Copy this file to .env and update with your actual values

# Database
DATABASE_URL="postgresql://wiki:wiki@postgres:5432/wiki"

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET="change-this-super-secret-jwt-key-in-production"
JWT_REFRESH_SECRET="change-this-super-secret-refresh-key-in-production"

# API Configuration
API_URL="https://yourdomain.com"
CORS_ORIGIN="https://yourdomain.com"

# SMTP for email notifications
SMTP_HOST="smtp.yourdomain.com"
SMTP_PORT=587
SMTP_USER="wiki@yourdomain.com"
SMTP_PASS="your-smtp-password"
SMTP_FROM="Wiki System <wiki@yourdomain.com>"
SMTP_SECURE=false

# SSL/TLS
SSL_CERT_PATH="/etc/nginx/ssl/cert.pem"
SSL_KEY_PATH="/etc/nginx/ssl/key.pem"

# Application
NODE_ENV=production
PORT=3001

# Backup
BACKUP_RETENTION_DAYS=30